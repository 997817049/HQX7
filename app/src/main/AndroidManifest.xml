            android:name="com.baidu.lbsapi.API_KEY"
            android:value="oiDD2ZFCNPBLrMhLhBYdCVGuoX0KbSof" >
    </meta-data>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.login.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.study.SubActivity"/>
        <activity android:name=".activity.search.SearchActivity"/>
        <activity android:name=".activity.search.SearchContentActivity"/>
        <activity android:name=".activity.study.ContentActivity"/>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.my.AboutActivity"/>
        <activity android:name=".activity.news.ArticleActivity"/>
        <activity android:name=".activity.my.CollectionActivity"/>
        <activity android:name=".activity.login.LoginActivity"/>
        <activity android:name=".activity.login.RegisterActivity"/>
        <activity android:name=".activity.school.SchoolDetailActivity"/>
        <activity android:name=".activity.school.SchoolListActivity"/>
        <activity android:name=".activity.my.SetActivity"/>
